{
  "npm.binPath": "/opt/homebrew/opt/node@14/bin/npm",
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  },
  "styled-components.lint": {
    "vendorPrefix": "error",
    "zeroUnits": "error"
  },
  "coc.preferences.formatOnSaveFiletypes": ["typescript", "typescriptreact", "javascript", "javascriptreact", "json", "graphql"]
}
