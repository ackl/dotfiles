#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m signal --add app='^Ghostty$' event=window_created action='yabai -m space --layout bsp'
yabai -m signal --add app='^Ghostty$' event=window_destroyed action='yabai -m space --layout bsp'
yabai -m rule --add app="^Notes" manage=off sub-layer=below
yabai -m rule --add app="^Finder" manage=off sub-layer=below


# global settings
yabai -m config                                 \
    layout 		                   bsp            \
    external_bar                 off:0:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.88           \
    window_opacity               off            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  8             \
    bottom_padding               8             \
    left_padding                 8             \
    right_padding                8             \
    window_gap                   6             \
    mouse_modifier               cmd             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

# defaults (keep your existing block at .yabairc:15-46)
  default_top=8
  default_bottom=8
  default_left=8
  default_right=8
  default_gap=6

  set_display_padding() {
    display="$1"
    visible="$(yabai -m query --windows --display "$display" \
      | jq '[.[] | select(."is-visible" == true and ."is-floating" == false)] | length')"

    if [ "$visible" -le 1 ]; then
      yabai -m config --display "$display" top_padding 0
      yabai -m config --display "$display" bottom_padding 0
      yabai -m config --display "$display" left_padding 0
      yabai -m config --display "$display" right_padding 0
      yabai -m config --display "$display" window_gap 0
    else
      yabai -m config --display "$display" top_padding 8
      yabai -m config --display "$display" bottom_padding8
      yabai -m config --display "$display" left_padding 8
      yabai -m config --display "$display" right_padding 8
      yabai -m config --display "$display" window_gap 6
    fi
  }

  refresh_padding() {
    yabai -m query --displays | jq '.[].index' | while read -r display; do
      set_display_padding "$display"
    done
  }

refresh_padding

  for evt in window_created window_destroyed window_moved window_resized \
             window_minimized window_deminimized application_front_switched \
             space_changed display_changed; do
    yabai -m signal --add event="$evt" action="refresh_padding"
  done

echo "yabai configuration loaded.."

